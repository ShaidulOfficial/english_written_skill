<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_3sdp"
    tools:context=".DetailsActivity">

    <com.codesgood.views.JustifiedTextView
          android:id="@+id/paragraph_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_5sdp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:text="@string/paragraph"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textDirection="firstStrong"
        android:textIsSelectable="true"
       android:layout_margin="@dimen/_4sdp"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardVitem"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVitem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_10sdp"
        android:backgroundTint="@color/blue"
        android:outlineAmbientShadowColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paragraph_description"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backimv"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/arrow_back_24"
                app:tint="@color/white" />
            <ImageView
                android:id="@+id/copyimv"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:tint="@color/white"
                android:src="@drawable/copy_24"/>
            <ImageView
                android:id="@+id/shareimv"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:tint="@color/white"
                android:src="@drawable/share_24"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>